{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "plugins": [
      // resolve paths in .js files
      {
        "transform": "typescript-transform-paths"
      },
      // resolve paths in .d.ts files
      {
        "afterDeclarations": true,
        "transform": "typescript-transform-paths"
      }
    ],
    "rootDir": "src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["docs", "node_modules", "src/**/*.test.ts"]
}
